    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SarciniMuncitori"
    Shell.FlyoutBehavior="Disabled"
    >

    <TabBar>
        <ShellContent Title="Bine ai venit!" 
